<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="5dp">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="3dp"
                  android:background="@color/almost_white"
                  android:layout_gravity="center"
                  android:gravity="center">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:minHeight="60dp"
                  android:gravity="center"
                  android:text="Gdzie noga boli?"
                  android:textSize="35sp"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/pain_leg_thigh"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_margin="3dp"
                  android:padding="5dp"
                  android:background="@color/almost_white"
                  android:focusable="true"
                  android:clickable="true"
                  android:onClick="changeView_Pain_Leftright">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="5"
                      android:layout_gravity="center"
                      android:gravity="center">
            <ImageView android:id="@+id/pain_thigh_image"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:scaleType="centerCrop"
                       android:adjustViewBounds="true"
                       android:src="@drawable/pain_thigh"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_gravity="center"
                      android:gravity="center">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="40dp"
                      android:layout_marginBottom="3dp"
                      android:gravity="center"
                      android:text="Udo"
                      android:textSize="26sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:id="@+id/pain_leg_knee"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_margin="3dp"
                  android:padding="5dp"
                  android:background="@color/almost_white"
                  android:focusable="true"
                  android:clickable="true"
                  android:onClick="changeView_Pain_Leftright">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="5"
                      android:layout_gravity="center"
                      android:gravity="center">
            <ImageView android:id="@+id/pain_knee_image"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:scaleType="centerCrop"
                       android:adjustViewBounds="true"
                       android:src="@drawable/pain_knee"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_gravity="center"
                      android:gravity="center">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="40dp"
                      android:layout_marginBottom="3dp"
                      android:gravity="center"
                      android:text="Kolano"
                      android:textSize="26sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:id="@+id/pain_leg_calf"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_margin="3dp"
                  android:padding="5dp"
                  android:background="@color/almost_white"
                  android:focusable="true"
                  android:clickable="true"
                  android:onClick="changeView_Pain_Leftright">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="5"
                      android:layout_gravity="center"
                      android:gravity="center">
            <ImageView android:id="@+id/pain_calf_image"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:scaleType="centerCrop"
                       android:adjustViewBounds="true"
                       android:src="@drawable/pain_calf"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_gravity="center"
                      android:gravity="center">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="40dp"
                      android:layout_marginBottom="3dp"
                      android:gravity="center"
                      android:text="Åydka"
                      android:textSize="26sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/pain_leg_foot"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_margin="3dp"
                  android:padding="5dp"
                  android:background="@color/almost_white"
                  android:focusable="true"
                  android:clickable="true"
                  android:onClick="changeView_Pain_Leftright">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="5"
                      android:layout_gravity="center"
                      android:gravity="center">
            <ImageView android:id="@+id/pain_foot_image"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:scaleType="centerCrop"
                       android:adjustViewBounds="true"
                       android:src="@drawable/pain_foot"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_gravity="center"
                      android:gravity="center">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="40dp"
                      android:layout_marginBottom="3dp"
                      android:gravity="center"
                      android:text="Stopa"
                      android:textSize="26sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
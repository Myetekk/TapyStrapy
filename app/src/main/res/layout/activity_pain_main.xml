<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="5dp">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="3dp"
                  android:background="@color/almost_white"
                  android:layout_gravity="center"
                  android:gravity="center">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:minHeight="60dp"
                  android:gravity="center"
                  android:text="Co cię boli?"
                  android:textSize="35sp"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/pain_head"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_margin="3dp"
                  android:padding="5dp"
                  android:background="@color/almost_white"
                  android:focusable="true"
                  android:clickable="true"
                  android:onClick="changeView_Pain_Head">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="5"
                      android:layout_gravity="center"
                      android:gravity="center">
            <ImageView android:id="@+id/painHeadImage1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:scaleType="centerCrop"
                       android:adjustViewBounds="true"
                       android:src="@drawable/pain_head"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_gravity="center"
                      android:gravity="center">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="40dp"
                      android:layout_marginBottom="3dp"
                      android:gravity="center"
                      android:text="Głowa"
                      android:textSize="26sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:id="@+id/pain_hands"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_margin="3dp"
                  android:padding="5dp"
                  android:background="@color/almost_white"
                  android:focusable="true"
                  android:clickable="true"
                  android:onClick="changeView_Pain_Hand">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="5"
                      android:layout_gravity="center"
                      android:gravity="center">
            <ImageView android:id="@+id/painHandsImage1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:scaleType="centerCrop"
                       android:adjustViewBounds="true"
                       android:src="@drawable/pain_hands"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_gravity="center"
                      android:gravity="center">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="40dp"
                      android:layout_marginBottom="3dp"
                      android:gravity="center"
                      android:text="Ręce"
                      android:textSize="26sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:id="@+id/pain_body"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_margin="3dp"
                  android:padding="5dp"
                  android:background="@color/almost_white"
                  android:focusable="true"
                  android:clickable="true"
                  android:onClick="changeView_Pain_Torso">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="5"
                      android:layout_gravity="center"
                      android:gravity="center">
            <ImageView android:id="@+id/painBodyImage1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:scaleType="centerCrop"
                       android:adjustViewBounds="true"
                       android:src="@drawable/pain_torso"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_gravity="center"
                      android:gravity="center">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="40dp"
                      android:layout_marginBottom="3dp"
                      android:gravity="center"
                      android:text="Tułów"
                      android:textSize="26sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:id="@+id/pain_legs"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_margin="3dp"
                  android:padding="5dp"
                  android:background="@color/almost_white"
                  android:focusable="true"
                  android:clickable="true"
                  android:onClick="changeView_Pain_Leg">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="5"
                      android:layout_gravity="center"
                      android:gravity="center">
            <ImageView android:id="@+id/painLegsImage1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:scaleType="centerCrop"
                       android:adjustViewBounds="true"
                       android:src="@drawable/pain_legs"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_gravity="center"
                      android:gravity="center">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="40dp"
                      android:layout_marginBottom="3dp"
                      android:gravity="center"
                      android:text="Nogi"
                      android:textSize="26sp"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>